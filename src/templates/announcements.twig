{% extends "components/base.twig" %}
{% block content %}
    <div class="container">
        {{ include('components/loading.twig') }}
        <div id="news-container">
            <div class="row">
                <div class="col m1"></div>
                <div class="col m10">

                    <div class="card-panel blue-grey center-align">
                        <h5 class="blue-grey-text text-lighten-4">News and Announcements</h5>
                    </div>
                </div>
                <div class="col m1"></div>
            </div>
            <div class="row">
                <div class="col m2"></div>
                <div id="news-panel" class="col m8">
                    {% for it in news %}
                        <div class="card">
                            <div class="card-content">
                                <div class="row">
                                    <div class="col m1 s2">
                                        <i class="mdi mdi-newspaper mdi-36px grey-text text-darken-2" aria-hidden="true"></i>
                                    </div>
                                    <div class="col m11 s10">
                                        <div class="white-space-pre">{{ it.notice }}</div>
                                        <hr>
                                        <div><em> {{ it.date }} </em></div>
                                    </div>
                                </div>
                            </div>
                            {% if it.link %}
                                <div class="card-content grey lighten-3 link-box" style="padding: 10px">
                                    <a href="{{ it.link }}" style="text-decoration : none;" target="_blank">
                                        <div class="valign-wrapper">
                                        <i class="material-icons padding-small">link</i>
                                        <span class="padding-small">View attached link</span>
                                        </div>
                                    </a>
                                </div>
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
                <div class="col m1"></div>
            </div>
        </div>
    </div>
{% endblock %}

{% block scripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/dot/1.1.0/doT.min.js"></script>
    <script src="{{ base_url }}/scripts/news.js"></script>
{% endblock %}